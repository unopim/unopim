<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
    bootstrap="vendor/autoload.php"
    colors="true"
    executionOrder="depends,defects"
    failOnRisky="true"
    failOnWarning="true"
>
    <testsuites>

        <testsuite name="Api Feature Test">
            <directory suffix="Test.php">packages/Webkul/AdminApi/tests/Feature</directory>
        </testsuite>

        <testsuite name="Core Unit Test">
            <directory suffix="Test.php">packages/Webkul/Core/tests/Unit</directory>
        </testsuite>

        <testsuite name="DataGrid Unit Test">
            <directory suffix="Test.php">packages/Webkul/DataGrid/tests/Unit</directory>
        </testsuite>

        <testsuite name="DataTransfer Unit Test">
            <directory suffix="Test.php">packages/Webkul/DataTransfer/tests/Unit</directory>
        </testsuite>

        <testsuite name="User Feature Test">
            <directory suffix="Test.php">packages/Webkul/User/tests/Feature</directory>
        </testsuite>

        <testsuite name="Admin Feature Test">
            <directory suffix="Test.php">packages/Webkul/Admin/tests/Feature</directory>
        </testsuite>

        <testsuite name="Installer Feature Test">
            <directory suffix="Test.php">packages/Webkul/Installer/tests/Feature</directory>
        </testsuite>

        <testsuite name="ElasticSearch Feature Test">
            <directory suffix="Test.php">packages/Webkul/ElasticSearch/tests/Feature</directory>
        </testsuite>

        <testsuite name="Completeness Feature Test">
            <directory suffix="Test.php">packages/Webkul/Completeness/tests/Feature</directory>
        </testsuite>

    </testsuites>

    <source>
        <include>
            <directory suffix=".php">app</directory>
            <directory suffix=".php">packages</directory>
        </include>
    </source>

    <php>
        <env name="APP_ENV" value="testing"/>
        <env name="APP_DEBUG" value="true"/>

        <env name="BCRYPT_ROUNDS" value="4"/>
        <env name="CACHE_DRIVER" value="array"/>
        <env name="MAIL_MAILER" value="array"/>
        <env name="QUEUE_CONNECTION" value="sync"/>
        <env name="SESSION_DRIVER" value="array"/>

        <env name="TELESCOPE_ENABLED" value="false"/>
    </php>
</phpunit>
